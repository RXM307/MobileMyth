   </basicHttpBinding>
  </bindings>
  <client>
   <endpoint address="" binding="basicHttpBinding"
    bindingConfiguration="BasicHttpBinding_Myth" contract="MythService.Myth"
    name="BasicHttpBinding_Myth" />
   <endpoint address="" binding="basicHttpBinding"
    bindingConfiguration="BasicHttpBinding_Dvr" contract="MythDVR.Dvr"
    name="BasicHttpBinding_Dvr" />
   <endpoint address="" binding="basicHttpBinding"
    bindingConfiguration="BasicHttpBinding_Content" contract="MythContent.Content"
    name="BasicHttpBinding_Content" />
   <endpoint address="" binding="basicHttpBinding"
    bindingConfiguration="BasicHttpBinding_Guide" contract="MythGuide.Guide"
    name="BasicHttpBinding_Guide" />
   <endpoint address="" binding="basicHttpBinding"
    bindingConfiguration="BasicHttpBinding_Video" contract="MythVideo.Video"
    name="BasicHttpBinding_Video" />
  </client>
 </system.serviceModel>
</configuration>
